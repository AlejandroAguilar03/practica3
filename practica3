  //definciones de la funcion mayorde
  int mayorde(int a, int b, int c){
    if((a>b)&&(a>c))return
    (a);
    if((b>a)&&(b>c))return
    (b);
    if((c>a)&&(c>b))return
    (c);
    if((a==b)&&(b==c)){
        cout<<"los 3 numeros son iguales entre si"<<endl;
        return(a);
    }
  }//fin de funciones mayorde
  